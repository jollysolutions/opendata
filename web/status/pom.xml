    <artifactId>status</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>war</packaging>

    <name>Webapps status</name>
    
    <description>
        Provides status statistics for a specific Tomcat Instance
        
	The main purpose of this is so we don't have to monitor the JVM/Tomcat in every webapp otherwise the request sizes
	would grow for the statistics
    </description>

    <properties>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
